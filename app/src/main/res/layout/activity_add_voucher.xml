<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_voucher"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editVoucherName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_voucher_name"
        android:inputType="text"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/editVoucherDiscount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_voucher_discount"
        android:inputType="numberDecimal"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/editVoucherQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_voucher_quantity"
        android:inputType="number"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonSaveVoucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:layout_marginTop="16dp"
        android:layout_gravity="center" />

</LinearLayout>